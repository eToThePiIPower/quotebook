<%= form_with(model: quote, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :text %>
    <%= form.text_area :text, class: "form-control",
      placeholder: "To be, or not to be?", rows: 4 %>
  </div>

  <div class="form-group">
    <%= form.label :source %>
    <%= form.text_field :source, class: "form-control", placeholder: "William Shakespeare" %>
  </div>

  <div class="actions">
    <%= form.submit 'Submit', class: "btn btn-primary form-control" %>
  </div>
<% end %>
